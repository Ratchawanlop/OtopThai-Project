<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OTOP Thailand</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Instrument+Sans:wght@400;500;600;700&family=Instrument+Serif&display=swap" rel="stylesheet" />

    <!-- Bootstrap 5 + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />

    <style>
        :root {
            --otop-green: #3d5a3e;
            --otop-green-light: #4a6f4b;
            --otop-gold: #c8a45a;
            --otop-cream: #faf7f2;
            --otop-dark: #2a2a2a;
        }
        body {
            font-family: 'Instrument Sans', sans-serif;
            background-color: var(--otop-cream);
            color: var(--otop-dark);
        }
        .font-serif { font-family: 'Instrument Serif', serif; }

        /* Navbar */
        .navbar-otop { background: #fff; border-bottom: 1px solid #e8e0d4; }
        .navbar-otop .nav-link { color: var(--otop-dark); font-weight: 500; }
        .navbar-otop .nav-link:hover { color: var(--otop-green); }

        /* Buttons */
        .btn-otop {
            background-color: var(--otop-green);
            border-color: var(--otop-green);
            color: #fff;
        }
        .btn-otop:hover {
            background-color: var(--otop-green-light);
            border-color: var(--otop-green-light);
            color: #fff;
        }
        .btn-outline-otop {
            border-color: var(--otop-green);
            color: var(--otop-green);
            background: transparent;
        }
        .btn-outline-otop:hover {
            background-color: var(--otop-green);
            color: #fff;
        }

        /* Badge */
        .badge-otop { background-color: var(--otop-gold); color: #fff; }

        /* Card */
        .card-product { border: 1px solid #e8e0d4; transition: box-shadow .2s, transform .2s; }
        .card-product:hover { box-shadow: 0 8px 24px rgba(0,0,0,.08); transform: translateY(-2px); }

        /* Footer */
        .footer-otop { background-color: var(--otop-dark); }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- ===== Header ===== -->
    <header class="sticky-top navbar-otop">
        <!-- Main nav -->
        <nav class="navbar navbar-expand-lg py-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                    <span class="fw-bold fs-4" style="color: var(--otop-green);">OTOP</span>
                    <span class="text-muted fs-6">Thailand</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Index">Products</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Categories</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Products" asp-action="Index" asp-route-category="silk"><i class="bi bi-asterisk me-2"></i>Thai Silk</a></li>
                                <li><a class="dropdown-item" asp-controller="Products" asp-action="Index" asp-route-category="ceramics"><i class="bi bi-cup me-2"></i>Ceramics</a></li>
                                <li><a class="dropdown-item" asp-controller="Products" asp-action="Index" asp-route-category="herbal"><i class="bi bi-flower1 me-2"></i>Herbal</a></li>
                                <li><a class="dropdown-item" asp-controller="Products" asp-action="Index" asp-route-category="woven"><i class="bi bi-grid-3x3-gap me-2"></i>Handwoven</a></li>
                            </ul>
                        </li>
                    </ul>
                    
    <!-- ===== Main ===== -->
    <main class="flex-grow-1">
        @RenderBody()
    </main>

    <!-- ===== Footer ===== -->
    <footer class="footer-otop text-white py-5 mt-auto">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-4">
                    <h5 class="fw-bold mb-3">
                        <span style="color: var(--otop-gold);">OTOP</span> Thailand
                    </h5>
                    <p class="text-secondary small">
                        Authentic Thai craftsmanship. Each product tells a story of tradition,
                        skill, and the heart of local artisans across Thailand.
                    </p>
                    <div class="d-flex gap-2">
                        <a href="#" class="btn btn-outline-light btn-sm"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="btn btn-outline-light btn-sm"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="btn btn-outline-light btn-sm"><i class="bi bi-line"></i></a>
                    </div>
                </div>
                <div class="col-6 col-lg-2">
                    <h6 class="fw-semibold mb-3" style="color: var(--otop-gold);">Shop</h6>
                    <ul class="list-unstyled small">
                        <li class="mb-2"><a href="#" class="text-secondary text-decoration-none">All Products</a></li>
                        <li class="mb-2"><a href="#" class="text-secondary text-decoration-none">Thai Silk</a></li>
                        <li class="mb-2"><a href="#" class="text-secondary text-decoration-none">Ceramics</a></li>
                        <li class="mb-2"><a href="#" class="text-secondary text-decoration-none">Herbal</a></li>
                    </ul>
                </div>
                <div class="col-6 col-lg-2">
                    <h6 class="fw-semibold mb-3" style="color: var(--otop-gold);">Support</h6>
                    <ul class="list-unstyled small">
                        <li class="mb-2"><a href="#" class="text-secondary text-decoration-none">Contact</a></li>
                        <li class="mb-2"><a href="#" class="text-secondary text-decoration-none">Shipping</a></li>
                        <li class="mb-2"><a href="#" class="text-secondary text-decoration-none">Returns</a></li>
                        <li class="mb-2"><a href="#" class="text-secondary text-decoration-none">FAQ</a></li>
                    </ul>
                </div>
                <div class="col-lg-4">
                    <h6 class="fw-semibold mb-3" style="color: var(--otop-gold);">Contact</h6>
                    <ul class="list-unstyled small text-secondary">
                        <li class="mb-2"><i class="bi bi-geo-alt me-2"></i>Bangkok, Thailand</li>
                        <li class="mb-2"><i class="bi bi-envelope me-2"></i>hello@otop-thailand.com</li>
                        <li class="mb-2"><i class="bi bi-telephone me-2"></i>+66 2 xxx xxxx</li>
                    </ul>
                </div>
            </div>
            <hr class="my-4 border-secondary" />
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center small text-secondary">
                <p class="mb-0">&copy; @DateTime.Now.Year OTOP Thailand. All rights reserved.</p>
                <div class="d-flex gap-3">
                    <a href="#" class="text-secondary text-decoration-none">Privacy</a>
                    <a href="#" class="text-secondary text-decoration-none">Terms</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
